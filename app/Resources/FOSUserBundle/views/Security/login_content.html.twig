{% trans_default_domain 'FOSUserBundle' %}


    <form action="{{ path("fos_user_security_check") }}" method="post" class="form-group-style">
        <div class="form-group-header-image"></div>
        {% if error %}
            <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
        {% endif %}

        <div class="form-group">
            {% if csrf_token %}
                <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
            {% endif %}
        </div>

        <div class="form-group">
            <label for="username">{{ 'security.login.username'|trans }}</label>
            <input type="text" class="form-control" id="username" name="_username" value="{{ last_username }}" required="required" />
        </div>

        <div class="form-group">
            <label for="password">{{ 'security.login.password'|trans }}</label>
            <input type="password" class="form-control" id="password" name="_password" required="required" />
        </div>


        <input type="checkbox" id="remember_me" name="_remember_me" value="on" />
        <label for="remember_me">{{ 'security.login.remember_me'|trans }}</label>

        <div class="form-group">
            <input type="submit" class="btn btn-block btn-lg btn-danger" id="_submit" name="_submit" value="{{ 'security.login.submit'|trans }}" />
        </div>
        
        <div class="form-group">
            <a href="{{ path('fos_user_resetting_request') }}">Zapomniałeś hasła?</a>
        </div>


    </form>

